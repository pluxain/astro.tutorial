---
type Props = {
  tag: string;
};

const { tag } = Astro.props;
---

<a href={`/tags/${tag}`}>{tag}</a>
<style>
  a {
    display: block;
    padding: 0.5rem;
    font-size: 1.15rem;
    background-color: var(--accent-bg);
    color: var(--white-text);
    border-radius: 0.375rem;
    text-decoration: none;
  }

  .tag {
    padding: 0.5rem;
  }

  a::before {
    content: "\1F3F7";
  }
</style>
