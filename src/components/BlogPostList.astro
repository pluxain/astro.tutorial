---
import BlogPostListItem from "./BlogPostListItem.astro";

const { posts } = Astro.props;
---

{
  posts.length > 0 && (
    <ul>
      {posts.map((post: { data: { title: string }; slug: string }) => (
        <BlogPostListItem title={post.data.title} url={`/posts/${post.slug}`} />
      ))}
    </ul>
  )
}
