---
import BaseLayout from "../../layouts/BaseLayout.astro";
import type { MarkdownPostFrontmatter } from "../../types";

const allPosts = await Astro.glob<MarkdownPostFrontmatter>("../posts/*.md");

const uniqueTags = [
  ...new Set(
    allPosts
      .map((post) => (post.frontmatter.tags ? post.frontmatter.tags : []))
      .flat(),
  ),
];

const pageTitle = "Tags";
---

<BaseLayout pageTitle={pageTitle}>
  <h2>Find posts by tag!</h2>
  {
    uniqueTags.length > 0 && (
      <ul>
        {uniqueTags.map((tag) => (
          <li>
            <a href={`/tags/${tag}`}>{tag}</a>
          </li>
        ))}
      </ul>
    )
  }
</BaseLayout>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  li {
    border: dotted 1px #a1a1a1;
    padding: 0.5rem 1rem;
    font-size: 1.15rem;
    background-color: var(--white-bg);
  }

  a {
    color: rgb(0, 83, 159);
    text-decoration: none;
  }
</style>
